@model ML.Empleado
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript" src="~/Scripts/Empleado/Empleado.js"></script>
<h2>Empleados</h2>
<br />
<p class=""></p>
<div class="alert alert-info "> modulo Empleado, informacion relevante de los empleados</div>
<div class="container">

    <div class=" row">

        <div style="float:right; margin-bottom:1em"   >
            <button id="boton" type="submit" class="btn btn-success" title="Agregar" onclick="InitializedControls()">
                +
            </button>
            @*@Html.ActionLink("+", "Form", "Empleado", htmlAttributes: new { @class = "btn btn-success" })*@
        </div>
    </div>
  



    <div class="row">
        <div class="col-md-12">
            <table id="Empleados" class="table table-bordered table-responsive text-center" >
                <thead >
                    <tr>
                        <td>Editar</td>
                        <td>Numeronomina</td>
                        <td>Nombre</td>
                        <td>ApellidoPaterno</td>
                        <td>ApellidoMaterno</td>
                        <td>Estado</td>
                        <td>Borrar</td>
                    </tr>
                </thead>

                <tbody>



                </tbody>




            </table>
        </div>
    </div>






</div>


<div class="modal fade" id="ModalUpdate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Actualizar subcategoria</h4>
            </div>

            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class=" col-md-12">
                            <div class="form-group">
                                <label class="label label-info">IdEmpleado</label>
                                <input type="text" class="form-control" id="txtIdEmpleado" disabled="disabled" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class=" col-md-12">
                            <div class="form-group">
                                <label class="label label-info">Nombre</label>
                                <input type="text" class="form-control" id="txtNombre" placeholder="Nombre"  />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class=" col-md-12">
                            <div class="form-group">
                                <label class="label label-info">Apellido Paterno</label>
                                <input type="text" class="form-control" id="txtApellidoPaterno" placeholder="Apellido Paterno" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class=" col-md-12">
                            <div class="form-group">
                                <label class="label label-info">Apellido Materno</label>
                                <input type="text" class="form-control" id="txtApellidoMaterno" placeholder="Apellido Materno" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label class="label label-info">Entidad Federativa</label>
                            <div class="form-group">
                                <select id="ddlEntidades" class=" form-control"></select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                
                <button type="button" class="btn btn-success" id="btnUpdate" onclick="Form(txtIdEmpleado.value)">Guardar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-5">

            <div class="modal" id="myModal">

                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h4 class="modal-title">Detalle</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <div class="modal-body">
                            <h5>
                                Acción completada con éxito
                            </h5>
                        </div>
                        <div class="modal-footer">
                            @Html.ActionLink("Regresar", "GetAll", "Empleado", htmlAttributes: new { @class = "btn btn-primary  btn-lg" })
                        </div>

                    </div>
                </div>
            </div>


        </div>
    </div>
</div>





